{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "files": [
    "lib.sqlite.ts",
    "lib.pg.ts"
  ],
  "include": [
    "**/*.test.ts"
  ],
}